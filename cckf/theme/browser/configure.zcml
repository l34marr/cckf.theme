<configure
  xmlns="http://namespaces.zope.org/zope"
  xmlns:browser="http://namespaces.zope.org/browser"
  i18n_domain="cckf.theme">

  <!-- Zope 3 browser layer -->
  <interface
    name="CCKF Theme"
    interface=".interfaces.IThemeSpecific"
    type="zope.publisher.interfaces.browser.IBrowserSkinType" />

  <!-- special view -->
  <browser:page
    name="cckfview"
    for="*"
    class=".cckfview.CCKFView"
    permission="zope.Public"
    allowed_interface=".interfaces.ICCKFView" />

  <browser:viewletManager
    name="cckf.navigation"
    provides=".interfaces.ICustomNavigation"
    class="plone.app.viewletmanager.manager.OrderedViewletManager"
    permission="zope2.View"
    layer=".interfaces.IThemeSpecific" />

  <browser:viewlet
    name="plone.global_sections"
    manager=".interfaces.ICustomNavigation"
    template="sections.pt"
    permission="zope2.View"
    layer=".interfaces.IThemeSpecific" />

  <browser:viewlet
    name="plone.logo"
    manager="plone.app.layout.viewlets.interfaces.IPortalHeader"
    class="plone.app.layout.viewlets.common.LogoViewlet"
    template="logo.pt"
    permission="zope2.View"
    layer=".interfaces.IThemeSpecific" />

  <browser:viewlet
    name="plone.footer"
    manager="plone.app.layout.viewlets.interfaces.IPortalFooter"
    class="plone.app.layout.viewlets.common.FooterViewlet"
    template="footer.pt"
    permission="zope2.View"
    layer=".interfaces.IThemeSpecific" />

  <browser:viewlet
    name="plone.path_bar"
    manager="plone.app.layout.viewlets.interfaces.IAboveContent"
    class="plone.app.layout.viewlets.common.PathBarViewlet"
    template="path_bar.pt"
    permission="zope2.View"
    layer=".interfaces.IThemeSpecific" />

  <browser:page
    name="compact_view"
    for="plone.app.contenttypes.interfaces.IFolder"
    class=".compact_view.CompactView"
    template="compact_view.pt"
    permission="zope2.View"
    menu="plone_displayviews"
    title="Compact"
    layer=".interfaces.IThemeSpecific" />

</configure>
