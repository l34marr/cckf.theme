<html lang="en"
 xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
 xmlns:tal="http://xml.zope.org/namespaces/tal"
 xmlns:metal="http://xml.zope.org/namespaces/metal"
 xmlns:i18n="http://xml.zope.org/namespaces/i18n"
 metal:use-macro="here/main_template/macros/master"
 i18n:domain="plone">

<body>

<metal:content-core fill-slot="content-core">
<metal:block use-macro="context/standard_view/macros/content-core">

  <metal:entries fill-slot="entries">
  <metal:block use-macro="context/standard_view/macros/entries">
  <metal:entry fill-slot="entry">

    <div class="tileItem visualIEFloatFix"
     tal:define="obj item/getObject;
                 site_properties context/portal_properties/site_properties;
                 types_listings site_properties/typesUseViewActionInListings;
                 use_view_action types_listings|python:();
                 toLocalizedTime nocall: plone_view/toLocalizedTime;
                 item_start python:(item.start or item.StartDate) if item_type == 'Event' and item.whole_day else None;">
      <a href="#"
       tal:attributes="href item/getURL">
        <div style="float: left; margin: 0 1em 0.5em 0;">
        <tal:img condition="python:getattr(obj.aq_explicit, 'image', None)">
        <img src="" alt=""
         tal:define="scales obj/@@images;
                     scale python:scales.scale('image', 'summary')"
         tal:replace="structure python:scale and scale.tag() or None" />
        </tal:img>
        <img src="" alt=""
         tal:condition="python:not getattr(obj.aq_explicit, 'image', None)"
         tal:attributes="src string:++theme++cckf.theme/img/default.png;" />
        </div>
      </a>

      <h2 class="tileHeadline" metal:define-macro="listitem">
          <a href="#"
             class="summary url"
             tal:attributes="href python:item_type in use_view_action and item_url+'/view' or item_url;"
             tal:content="item/Title">
              Item Title
          </a>
      </h2>

      <span class="documentByLine">
        <span tal:condition="python: item_type == 'News Item'"
              tal:content="python:toLocalizedTime(item_created,long_format=0)">
              news date
        </span>
        <span tal:condition="python: item_type == 'Event'"
             i18n:translate="label_event_byline_onlyfrom">
          <abbr class="dtstart"
              tal:attributes="title python:item_start"
              tal:content="python:toLocalizedTime(item_start,long_format=0)"
             i18n:name="start">from date</abbr>
        </span>
        <span tal:condition="python: item_type == 'Event' and item.location"
             i18n:translate="label_event_byline_location">&mdash;
          <span class="location"
              tal:content="string:${item/location}"
             i18n:name="location">Oslo</span>,
        </span>
        <span tal:condition="python: item_type == 'Activity'"
              tal:replace="item/Description" />
      </span>

        <p class="tileBody"
         tal:condition="python: item.Description and item_type != 'Activity'"
         tal:content="item/Description">
          Description
        </p>

        <p class="tileFooter">
            <a href=""
               tal:attributes="href python:item_type in use_view_action and item_url+'/view' or item_url;"
               i18n:translate="read_more">
            Read More&hellip;
            </a>
        </p>

        <div class="visualClear"><!-- --></div>
    </div>

  </metal:entry>
  </metal:block>
  </metal:entries>

</metal:block>
</metal:content-core>

</body>
</html>
