<metal:page define-macro="master">
<tal:doctype tal:replace="structure string:&lt;!DOCTYPE html&gt;" />

<html xmlns="http://www.w3.org/1999/xhtml"
 tal:define="portal_state context/@@plone_portal_state;
    context_state context/@@plone_context_state;
    plone_view context/@@plone;
    lang portal_state/language;
    view nocall:view | nocall: plone_view;
    dummy python: plone_view.mark_view(view);
    portal_url portal_state/portal_url;
    checkPermission nocall: context/portal_membership/checkPermission;
    site_properties nocall:context/portal_properties/site_properties;
    ajax_load request/ajax_load | nothing;
    ajax_include_head request/ajax_include_head | nothing;
    dummy python:request.RESPONSE.setHeader('X-UA-Compatible', 'IE=edge,chrome=1');"
 tal:attributes="lang lang;">

  <metal:cache use-macro="context/global_cache_settings/macros/cacheheaders">
  Get the global cache headers located in global_cache_settings.
  </metal:cache>

<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

  <metal:baseslot define-slot="base">
    <base tal:attributes="href plone_view/renderBase" /><!--[if lt IE 7]></base><![endif]-->
  </metal:baseslot>

  <tal:notajax tal:condition="python:not ajax_load or ajax_include_head">
    <div tal:replace="structure provider:plone.htmlhead" />
    <link tal:replace="structure provider:plone.htmlhead.links" />
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:400,300,700|Open+Sans+Condensed:300|Lora" type="text/css" rel="stylesheet">	
    <link rel="stylesheet" href="++theme++cckf.theme/css/screen.css">

    <script src="++theme++cckf.theme/js/search.js"></script>
    <script src="++theme++cckf.theme/js/zozo.accordion.min.js"></script>
    <script type='text/javascript' src='http://font.arphic.com/FontSubsetOutput/1421291901118/A9CEEDB2D7580BC580679EDDD8FE8BF0/1421291901118.JS?5541868500'></script>

    <!-- for allinone_Banner  -->
    <link href="++theme++cckf.theme/css/allinone_thumbnailsBanner.css" rel="stylesheet" type="text/css">
    <script src="++theme++cckf.theme/js/allinone/jquery.ui.touch-punch.min.js" type="text/javascript"></script>
    <script src="++theme++cckf.theme/js/allinone/allinone_thumbnailsBanner.js" type="text/javascript"></script>
    <script src="++theme++cckf.theme/js/allinone/reflection.js" type="text/javascript"></script>
    <script>
    jQuery(function() {

    jQuery('#allinone_thumbnailsBanner_cool').allinone_thumbnailsBanner({
        skin: 'cool',
        numberOfThumbsPerScreen:7.3,
        width: 1920,
        height: 620,
        width100Proc:true,
        thumbsReflection:0,
        responsive:true,
        origthumbsHolderWrapperH:138,
        thumbsWrapperMarginTop:0,
        defaultEffect: 'slideFromLeft',
        showNavArrows: true,
        showCircleTimer: false,
        effectDuration:0.75
        });

    });
    </script>

    <tal:comment replace="nothing">
      Various slots where you can insert elements in the header from a template.
    </tal:comment>
    <metal:topslot define-slot="top_slot" />
    <metal:headslot define-slot="head_slot" />
    <metal:styleslot define-slot="style_slot" />
    <metal:javascriptslot define-slot="javascript_head_slot" />

    <meta name="viewport" content="width=device-width, initial-scale=0.6666, maximum-scale=1.0, minimum-scale=0.6666" />
    <meta name="generator" content="Plone - http://plone.org" />
  </tal:notajax>
</head>

<body tal:define="isRTL portal_state/is_rtl;
    sl python:plone_view.have_portlets('plone.leftcolumn', view);
    sr python:plone_view.have_portlets('plone.rightcolumn', view);
    body_class python:plone_view.bodyClass(template, view);
    classes python:context.restrictedTraverse('@@cckfview').getColumnsClasses(view);
    cckfview python:context.restrictedTraverse('@@cckfview');
    c01 python:cckfview.getNews();
    c02 python:cckfview.getActivity();
    root_url context/@@plone_portal_state/navigation_root_url"
 tal:attributes="class body_class;
    dir python:isRTL and 'rtl' or 'ltr'">

<div id="bg"> </div>

<div id="visual-portal-wrapper">

  <div id="portal-top"
   i18n:domain="plone"
   tal:condition="not:ajax_load">
    <div>
      <div tal:replace="structure provider:plone.portaltop" />
    </div>
  </div>

  <!-- Start allinone_Banner -->
  <div style="margin-bottom: 130px">
   <div id="allinone_thumbnailsBanner_cool" style="display:none;">

    <!-- slide images -->
    <ul class="allinone_thumbnailsBanner_list">
     <li data-bottom-thumb="++theme++cckf.theme/img/allinone/thumbs/e1.jpg" data-text-id="#allinone_thumbnailsBanner_photoText1" data-link="xp" data-target="_blank"><img src="++theme++cckf.theme/img/allinone/01.jpg" alt="" /></li>
     <li data-bottom-thumb="++theme++cckf.theme/img/allinone/thumbs/e2.jpg" data-text-id="#allinone_thumbnailsBanner_photoText2" data-link="grants" data-target="_blank"><img src="++theme++cckf.theme/img/allinone/02.jpg" alt="" /></li>
     <li data-bottom-thumb="++theme++cckf.theme/img/allinone/thumbs/e3.jpg" data-text-id="#allinone_thumbnailsBanner_photoText3" data-link="camps" data-target="_blank"><img src="++theme++cckf.theme/img/allinone/03.jpg" alt="" /></li>
     <li data-bottom-thumb="++theme++cckf.theme/img/allinone/thumbs/e4.jpg" data-text-id="#allinone_thumbnailsBanner_photoText4" data-link="about/structure/overseas_center" data-target="_blank"><img src="++theme++cckf.theme/img/allinone/04.jpg" alt="" /></li>
     <li data-bottom-thumb="++theme++cckf.theme/img/allinone/thumbs/e5.jpg" data-text-id="#allinone_thumbnailsBanner_photoText5" data-link="sino" data-target="_blank"><img src="++theme++cckf.theme/img/allinone/05.jpg" alt="" /></li>
     <li data-bottom-thumb="++theme++cckf.theme/img/allinone/thumbs/e6.jpg" data-text-id="#allinone_thumbnailsBanner_photoText6" data-link="ccklib" data-target="_blank"><img src="++theme++cckf.theme/img/allinone/06.jpg" alt="" /></li>
    </ul>

    <!-- slide 1 text -->
    <div id="allinone_thumbnailsBanner_photoText1" class="allinone_thumbnailsBanner_texts">
     <div class="allinone_thumbnailsBanner_text_line textElement32_cool_FullWidth" data-link="project" data-initial-left="150" data-initial-top="230" data-final-left="220" data-final-top="230" data-duration="0.5" data-fade-start="0" data-delay="0.3">Special Projects</div>
     <div class="allinone_thumbnailsBanner_text_line textElement33_cool_FullWidth" data-link="project" data-initial-left="220" data-initial-top="330" data-final-left="220" data-final-top="300" data-duration="1" data-fade-start="0" data-delay="0.5">Supporting pioneering research,<br />
      strengthening international scholarly exchange</div>
    </div>
    <!-- slide 2 text -->
    <div id="allinone_thumbnailsBanner_photoText2" class="allinone_thumbnailsBanner_texts">
     <div class="allinone_thumbnailsBanner_text_line textElement32_cool_FullWidth" data-link="subsidy_project" data-initial-left="150" data-initial-top="230" data-final-left="220" data-final-top="230" data-duration="0.5" data-fade-start="0" data-delay="0.3">Grant and Fellowships</div>
     <div class="allinone_thumbnailsBanner_text_line textElement33_cool_FullWidth" data-link="subsidy_project" data-initial-left="220" data-initial-top="330" data-final-left="220" data-final-top="300" data-duration="1" data-fade-start="0" data-delay="0.5">Committed to academic excellence,<br />
      encouraging research<br /> in Chinese Studies worldwide</div>
    </div>
    <!-- slide 3 text -->
    <div id="allinone_thumbnailsBanner_photoText3" class="allinone_thumbnailsBanner_texts">
     <div class="allinone_thumbnailsBanner_text_line textElement32_cool_FullWidth" data-link="camp" data-initial-left="150" data-initial-top="230" data-final-left="220" data-final-top="230" data-duration="0.5" data-fade-start="0" data-delay="0.3">Academic Camps</div>
     <div class="allinone_thumbnailsBanner_text_line textElement33_cool_FullWidth" data-link="camp" data-initial-left="220" data-initial-top="330" data-final-left="220" data-final-top="300" data-duration="1" data-fade-start="0" data-delay="0.5">Platform for Cross-Strait and worldwide interaction<br /> between young scholars,<br />
      a feast of intellectual stimulation and new perspectives</div>
    </div>
    <!-- slide 4 text -->
    <div id="allinone_thumbnailsBanner_photoText4" class="allinone_thumbnailsBanner_texts">
     <div class="allinone_thumbnailsBanner_text_line textElement32_cool_FullWidth" data-link="about/structure/overseas_center" data-initial-left="150" data-initial-top="230" data-final-left="220" data-final-top="230" data-duration="0.5" data-fade-start="0" data-delay="0.3">Overseas Centers</div>
     <div class="allinone_thumbnailsBanner_text_line textElement33_cool_FullWidth" data-link="about/structure/overseas_center" data-initial-left="220" data-initial-top="330" data-final-left="220" data-final-top="300" data-duration="1" data-fade-start="0" data-delay="0.5">Spanning the globe,<br />
      from Hong Kong to the Czech Republic,<br /> from Germany to the United States</div>
    </div>
    <!-- slide 5 text -->
    <div id="allinone_thumbnailsBanner_photoText5" class="allinone_thumbnailsBanner_texts">
     <div class="allinone_thumbnailsBanner_text_line textElement32_cool_FullWidth" data-link="sino" data-initial-left="150" data-initial-top="230" data-final-left="220" data-final-top="230" data-duration="0.5" data-fade-start="0" data-delay="0.3">Resources in Chinese Studies</div>
     <div class="allinone_thumbnailsBanner_text_line textElement33_cool_FullWidth" data-link="sino" data-initial-left="220" data-initial-top="330" data-final-left="220" data-final-top="300" data-duration="1" data-fade-start="0" data-delay="0.5">Comprehensive digital collections<br />
      to benefit scholars<br />throughout the world</div>
    </div>
    <!-- slide 6 text -->
    <div id="allinone_thumbnailsBanner_photoText6" class="allinone_thumbnailsBanner_texts">
     <div class="allinone_thumbnailsBanner_text_line textElement32_cool_FullWidth" data-link="ccklib" data-initial-left="150" data-initial-top="230" data-final-left="220" data-final-top="230" data-duration="0.5" data-fade-start="0" data-delay="0.3">Plans for the CCK Library</div>
     <div class="allinone_thumbnailsBanner_text_line textElement33_cool_FullWidth" data-link="ccklib" data-initial-left="220" data-initial-top="330" data-final-left="220" data-final-top="300" data-duration="1" data-fade-start="0" data-delay="0.5">The ROC's first presidential library and archives,<br />
      featuring digital collections<br /> to serve the Chinese Studies academic community</div>
    </div>
   </div>
  </div><!-- margin-bottom: 60px -->
  <!-- End allinone_Banner -->

  <div style="margin: 0 auto; max-width: 1180px;">

  <div class="row topspace">

   <!-- Start News -->
   <div id="news" class="news-column span-2-3">
    <div class="head-container">
     <h3 class="small">News</h3>
     <div class="hide-small topright text-right">
      <a class="disclosure small" href="#"
       tal:attributes="href string:${root_url}/news">More News</a>
     </div>
    </div>
    <hr data-class-small="inverse" class="skinny">
    <ul class="ruled links links-hilite no-arrows">
    <tal:news condition="c01"
     tal:repeat="item c01">
     <li> <a href="#"
           tal:attributes="href string:${item/getURL};">
      <article class="new-teaser">
       <table>
        <tbody>
         <tr>
          <td><div class="thumbnail image">
            <div> <img width="60" height="60" src="++theme++cckf.theme/img/post-icon.jpg"> </div>
           </div></td>
          <td><header>
            <h4 class="title" tal:content="item/Title">Title</h4>
            <time class="author" tal:content="python: item.Date[:10]">Date</time>
           </header></td>
         </tr>
        </tbody>
       </table>
      </article>
      </a> </li>
    </tal:news>
    </ul>
   </div>
   <!-- End News --> 

   <!-- Start Activities -->
   <div id="activity" class="news-column span-2-3">
    <div class="head-container">
     <h3 class="small">Recent Activities</h3>
     <div class="hide-small topright text-right">
      <a class="disclosure small" href="#"
       tal:attributes="href string:${root_url}/activities">More Activities</a>
     </div>
    </div>
    <hr data-class-small="inverse" class="skinny">
    <ul class="ruled links links-hilite no-arrows">
    <tal:events condition="c02"
     tal:repeat="item c02">
     <li> <a href="#"
           tal:attributes="href string:${item/getURL};">
      <article class="new-teaser">
       <table>
        <tbody>
         <tr>
          <td><div class="thumbnail image">
            <div> <img width="60" height="60" src="++theme++cckf.theme/img/post-icon.jpg"> </div>
           </div></td>
          <td><header>
            <h4 class="title" tal:content="item/Title">Title</h4>
            <time class="author" tal:content="python: item.Date[:10]">Date</time>
           </header></td>
         </tr>
        </tbody>
       </table>
      </article>
      </a> </li>
    </tal:events>
    </ul>
   </div>
   <!-- End Activities -->

   <div id="portal-columns" class="row">
    <div id="portal-column-content" class="cell" tal:attributes="class classes/content">
    </div>
    <tal:notajax tal:condition="not:ajax_load">
      <div id="portal-column-one" class="cell width-1:4 position-0"
       metal:define-slot="column_one_slot"
       tal:condition="sl"
       tal:attributes="class classes/one">
        <metal:portlets define-slot="portlets_one_slot">
          <tal:block replace="structure provider:plone.leftcolumn" />
        </metal:portlets>
      </div>
      <div id="portal-column-two" class="cell width-1:4 position-3:4"
       metal:define-slot="column_two_slot"
       tal:condition="sr"
       tal:attributes="class classes/two">
        <metal:portlets define-slot="portlets_two_slot">
          <tal:block replace="structure provider:plone.rightcolumn" />
        </metal:portlets>
      </div>
    </tal:notajax>
   </div>

  </div><!-- topspace -->

  </div><!-- 1180px -->

  <div class="visualClear"><!-- --></div>

  <div id="portal-footer"
   i18n:domain="plone"
   tal:condition="not:ajax_load">
    <div tal:replace="structure provider:plone.portalfooter" />
  </div>

<script type="text/javascript" src="++theme++cckf.theme/js/script.js"></script>

</body>
</html>

</metal:page>
